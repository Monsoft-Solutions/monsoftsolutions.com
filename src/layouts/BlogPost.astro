---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  author: string;
  category: string;
  tags: string[];
  heroImage?: string;
  heroImageAlt?: string;
  ogImage?: string;
  readingTime?: string;
}

const { 
  title, 
  description, 
  pubDate, 
  updatedDate, 
  author, 
  category, 
  tags,
  heroImage,
  heroImageAlt,
  ogImage,
  readingTime 
} = Astro.props;

const formattedPubDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Article structured data for SEO
const articleStructuredData = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "author": {
    "@type": "Organization",
    "name": author
  },
  "publisher": {
    "@type": "Organization",
    "name": "Monsoft Solutions",
    "logo": {
      "@type": "ImageObject",
      "url": "https://monsoftsolutions.com/logo.svg"
    }
  },
  "datePublished": pubDate.toISOString(),
  "dateModified": (updatedDate || pubDate).toISOString(),
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": Astro.url.href
  }
};
---

<Layout 
  title={title} 
  description={description} 
  ogImage={ogImage}
  structuredData={articleStructuredData}
>
  <Header />
  
  <main class="blog-post">
    <!-- Hero Section -->
    <header class="post-header">
      <div class="container">
        <div class="post-meta">
          <a href={`/blog/category/${category.toLowerCase().replace(/ & /g, '-').replace(/ /g, '-')}`} class="category-link">
            {category}
          </a>
          <span class="separator">•</span>
          <time datetime={pubDate.toISOString()}>{formattedPubDate}</time>
          {readingTime && (
            <>
              <span class="separator">•</span>
              <span class="reading-time">{readingTime}</span>
            </>
          )}
        </div>
        
        <h1 class="post-title">{title}</h1>
        <p class="post-description">{description}</p>
        
        <div class="post-author">
          <div class="author-avatar">
            <span>{author.charAt(0)}</span>
          </div>
          <div class="author-info">
            <span class="author-name">{author}</span>
            {updatedDate && (
              <span class="updated-date">Updated {formattedUpdatedDate}</span>
            )}
          </div>
        </div>
      </div>
    </header>
    
    <!-- Hero Image -->
    {heroImage && (
      <div class="hero-image-container">
        <div class="container">
          <img 
            src={heroImage} 
            alt={heroImageAlt || title}
            class="hero-image"
            width="1200"
            height="630"
            loading="eager"
            decoding="async"
          />
        </div>
      </div>
    )}
    
    <!-- Article Content -->
    <article class="post-content">
      <div class="container-narrow">
        <slot />
      </div>
    </article>
    
    <!-- Tags -->
    {tags.length > 0 && (
      <footer class="post-footer">
        <div class="container-narrow">
          <div class="tags">
            {tags.map(tag => (
              <a href={`/blog/tag/${tag.toLowerCase().replace(/ /g, '-')}`} class="tag">
                #{tag}
              </a>
            ))}
          </div>
          
          <!-- Share buttons -->
          <div class="share-section">
            <span class="share-label">Share this article</span>
            <div class="share-buttons">
              <a 
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="share-btn"
                aria-label="Share on Twitter"
              >
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
              <a 
                href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="share-btn"
                aria-label="Share on LinkedIn"
              >
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </footer>
    )}
    
    <!-- CTA Section -->
    <section class="post-cta">
      <div class="container-narrow">
        <div class="cta-card">
          <h2>Ready to Transform Your Business with AI?</h2>
          <p>Let's discuss how intelligent automation can help you save time, reduce costs, and scale your operations.</p>
          <a href="/contact" class="btn btn-primary">Start a Conversation</a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .blog-post {
    padding-top: 5rem;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .container-narrow {
    max-width: 720px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  /* Hero Image */
  .hero-image-container {
    padding: 0 0 2rem;
  }
  
  .hero-image {
    width: 100%;
    max-width: 1000px;
    height: auto;
    margin: 0 auto;
    display: block;
    border-radius: 12px;
    aspect-ratio: 16/9;
    object-fit: cover;
  }
  
  /* Header */
  .post-header {
    padding: 4rem 0 3rem;
    text-align: center;
  }
  
  .post-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-gray-500);
    margin-bottom: 1.5rem;
  }
  
  .category-link {
    color: var(--color-black);
    font-weight: 500;
    transition: opacity 0.2s ease;
  }
  
  .category-link:hover {
    opacity: 0.7;
  }
  
  .separator {
    color: var(--color-gray-300);
  }
  
  .post-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 600;
    letter-spacing: -0.03em;
    line-height: 1.2;
    max-width: 900px;
    margin: 0 auto 1.5rem;
  }
  
  .post-description {
    font-size: 1.25rem;
    color: var(--color-gray-600);
    max-width: 600px;
    margin: 0 auto 2rem;
    line-height: 1.6;
  }
  
  .post-author {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }
  
  .author-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--color-black);
    color: var(--color-white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 1.25rem;
  }
  
  .author-info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
  
  .author-name {
    font-weight: 500;
  }
  
  .updated-date {
    font-size: 0.875rem;
    color: var(--color-gray-500);
  }
  
  /* Content */
  .post-content {
    padding: 3rem 0;
  }
  
  .post-content :global(h2) {
    font-size: 1.75rem;
    font-weight: 600;
    margin: 3rem 0 1rem;
    letter-spacing: -0.02em;
  }
  
  .post-content :global(h3) {
    font-size: 1.375rem;
    font-weight: 600;
    margin: 2.5rem 0 0.75rem;
  }
  
  .post-content :global(p) {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-gray-700);
    margin-bottom: 1.5rem;
  }
  
  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
  }
  
  .post-content :global(li) {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-gray-700);
    margin-bottom: 0.75rem;
  }
  
  .post-content :global(blockquote) {
    border-left: 3px solid var(--color-black);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--color-gray-600);
  }
  
  .post-content :global(code) {
    background: var(--color-gray-100);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }
  
  .post-content :global(pre) {
    background: var(--color-gray-900);
    color: var(--color-white);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2rem 0;
  }
  
  .post-content :global(pre code) {
    background: none;
    padding: 0;
  }
  
  .post-content :global(a) {
    color: var(--color-black);
    text-decoration: underline;
    text-underline-offset: 3px;
  }
  
  .post-content :global(a:hover) {
    opacity: 0.7;
  }
  
  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
  }
  
  .post-content :global(strong) {
    font-weight: 600;
    color: var(--color-black);
  }
  
  /* Footer */
  .post-footer {
    padding: 2rem 0;
    border-top: 1px solid var(--color-gray-100);
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-bottom: 2rem;
  }
  
  .tag {
    font-size: 0.875rem;
    color: var(--color-gray-600);
    background: var(--color-gray-100);
    padding: 0.5rem 1rem;
    border-radius: 100px;
    transition: all 0.2s ease;
  }
  
  .tag:hover {
    background: var(--color-gray-200);
    color: var(--color-black);
  }
  
  .share-section {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .share-label {
    font-size: 0.875rem;
    color: var(--color-gray-500);
  }
  
  .share-buttons {
    display: flex;
    gap: 0.75rem;
  }
  
  .share-btn {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-gray-100);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-gray-600);
    transition: all 0.2s ease;
  }
  
  .share-btn:hover {
    background: var(--color-black);
    color: var(--color-white);
  }
  
  /* CTA */
  .post-cta {
    padding: 4rem 0;
  }
  
  .cta-card {
    background: var(--color-gray-50);
    border-radius: 16px;
    padding: 3rem;
    text-align: center;
  }
  
  .cta-card h2 {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .cta-card p {
    color: var(--color-gray-600);
    margin-bottom: 1.5rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }
  
  @media (max-width: 768px) {
    .post-header {
      padding: 3rem 0 2rem;
    }
    
    .post-description {
      font-size: 1.125rem;
    }
    
    .cta-card {
      padding: 2rem;
    }
  }
</style>
