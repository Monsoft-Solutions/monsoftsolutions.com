<script>
  // Add mouse position tracking for glow effect
  document.querySelectorAll('.service-card').forEach(card => {
    card.addEventListener('mousemove', (e) => {
      const rect = card.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      (card as HTMLElement).style.setProperty('--mouse-x', `${x}px`);
      (card as HTMLElement).style.setProperty('--mouse-y', `${y}px`);
    });
  });

  // Animated stats counter
  function animateValue(element: HTMLElement, start: number, end: number, duration: number, suffix: string, prefix: string) {
    const range = end - start;
    const startTime = performance.now();
    function update(currentTime: number) {
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);
      const easeOut = 1 - Math.pow(1 - progress, 3);
      const current = Math.floor(start + range * easeOut);
      element.textContent = prefix + current + suffix;
      if (progress < 1) requestAnimationFrame(update);
      else element.textContent = prefix + end + suffix;
    }
    requestAnimationFrame(update);
  }

  function parseStatValue(value: string) {
    const match = value.match(/^([<>$]?)(\d+(?:\.\d+)?)(.*?)$/);
    return match ? { prefix: match[1] || '', number: parseFloat(match[2]), suffix: match[3] || '' } : { prefix: '', number: 0, suffix: value };
  }

  const statsSection = document.getElementById('stats-section');
  if (statsSection) {
    const statsObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.querySelectorAll('.stat-value').forEach((el, index) => {
            const element = el as HTMLElement;
            const parsed = parseStatValue(element.dataset.value || '');
            if (parsed.number > 0) {
              element.textContent = parsed.prefix + '0' + parsed.suffix;
              setTimeout(() => animateValue(element, 0, parsed.number, 1500, parsed.suffix, parsed.prefix), index * 100);
            }
          });
          statsObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.3 });
    statsObserver.observe(statsSection);
  }
</script>
