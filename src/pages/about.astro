---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CTA from '../components/CTA.astro';

const team = [
  {
    name: 'Adriano Flechilla',
    role: 'Founder & CEO',
    description: 'Computer Science graduate with 10+ years building scalable software. Entrepreneur focused on AI, automation, and digital products that solve real business problems.',
    linkedin: 'https://linkedin.com/in/adriano-flechilla',
    github: 'https://github.com/flechilla',
    image: '/images/team/adriano.webp'
  },
  {
    name: 'Hernan Fernandez',
    role: 'Lead Engineer',
    description: 'PhD in Physics with 5+ years of software engineering experience. Brings rigorous scientific thinking to complex technical challenges.',
    image: '/images/team/hernan.webp'
  }
];

const values = [
  {
    title: 'AI-First Thinking',
    description: 'We don\'t bolt AI onto existing solutions. We architect systems where intelligence is fundamental to how they work.',
    icon: 'brain'
  },
  {
    title: 'Build to Deploy',
    description: 'We don\'t prototype for fun. Every line of code is written with production in mind. Ship fast, iterate faster.',
    icon: 'rocket'
  },
  {
    title: 'Outcome Obsessed',
    description: 'Beautiful code means nothing without business impact. We measure success in results, not features shipped.',
    icon: 'target'
  },
  {
    title: 'Partnership Model',
    description: 'We\'re not vendors—we\'re partners. Your success is our success, and we operate with that alignment.',
    icon: 'handshake'
  }
];
---

<Layout 
  title="About Us" 
  description="Meet the team behind Monsoft Solutions. We're an AI-first software company building intelligent solutions that transform how businesses operate."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="page-hero">
      <div class="container-narrow">
        <span class="page-label reveal">About Us</span>
        <h1 class="page-title reveal reveal-delay-1">
          A team that builds
          <span class="highlight">what others can't</span>
        </h1>
        <p class="page-subtitle reveal reveal-delay-2">
          We're an AI-first software company based in Miami. We build intelligent 
          systems that transform how businesses operate—from AI-powered SaaS products 
          to custom enterprise solutions.
        </p>
      </div>
    </section>

    <!-- Story Section -->
    <section class="story section-padding">
      <div class="container-wide">
        <div class="story-grid">
          <div class="story-content reveal">
            <h2>Our Story</h2>
            <p>
              Monsoft Solutions was born from a simple observation: most businesses 
              struggle to harness the power of AI, not because the technology isn't 
              ready, but because the solutions aren't built with their real needs in mind.
            </p>
            <p>
              Founded by technologists who've shipped software at scale, we combine 
              deep technical expertise with a relentless focus on business outcomes. 
              We've built AI systems that serve thousands of users, processed millions 
              of transactions, and helped businesses reclaim countless hours lost to 
              manual processes.
            </p>
            <p>
              Today, we operate multiple SaaS products while continuing to partner 
              with select clients on custom AI solutions. Our approach is simple: 
              build intelligent software that actually works.
            </p>
          </div>
          <div class="story-stats reveal reveal-delay-1">
            <div class="stat-card">
              <span class="stat-value">2020</span>
              <span class="stat-label">Founded</span>
            </div>
            <div class="stat-card">
              <span class="stat-value">3</span>
              <span class="stat-label">Products Live</span>
            </div>
            <div class="stat-card">
              <span class="stat-value">3.5K+</span>
              <span class="stat-label">Users Served</span>
            </div>
            <div class="stat-card">
              <span class="stat-value">50M+</span>
              <span class="stat-label">AI Operations</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="values section-padding">
      <div class="container-wide">
        <div class="section-header reveal">
          <span class="section-label">Our Values</span>
          <h2>How we operate</h2>
        </div>
        <div class="values-grid">
          {values.map((value, index) => (
            <div class={`value-card reveal reveal-delay-${(index % 4) + 1}`}>
              <div class="value-icon">
                {value.icon === 'brain' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M12 4.5c-3.5 0-6.5 2.5-6.5 6.5 0 2 1 4 2.5 5.5v4a1 1 0 001 1h6a1 1 0 001-1v-4c1.5-1.5 2.5-3.5 2.5-5.5 0-4-3-6.5-6.5-6.5z"/>
                    <path d="M10 21.5h4M12 4.5V2M8 11h8"/>
                  </svg>
                )}
                {value.icon === 'rocket' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 00-2.91-.09z"/>
                    <path d="M12 15l-3-3a22 22 0 012-3.95A12.88 12.88 0 0122 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 01-4 2z"/>
                    <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"/>
                  </svg>
                )}
                {value.icon === 'target' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <circle cx="12" cy="12" r="10"/>
                    <circle cx="12" cy="12" r="6"/>
                    <circle cx="12" cy="12" r="2"/>
                  </svg>
                )}
                {value.icon === 'handshake' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M20.42 4.58a5.4 5.4 0 00-7.65 0l-.77.78-.77-.78a5.4 5.4 0 00-7.65 0C1.46 6.7 1.33 10.28 4 13l8 8 8-8c2.67-2.72 2.54-6.3.42-8.42z"/>
                  </svg>
                )}
              </div>
              <h3>{value.title}</h3>
              <p>{value.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section class="team section-padding">
      <div class="container-wide">
        <div class="section-header reveal">
          <span class="section-label">The Team</span>
          <h2>People behind the products</h2>
        </div>
        <div class="team-grid">
          {team.map((member, index) => (
            <div class={`team-card reveal reveal-delay-${(index % 3) + 1}`}>
              <div class="team-avatar">
                {member.image ? (
                  <picture>
                    <source srcset={member.image} type="image/webp" />
                    <img src={member.image.replace('.webp', '.png')} alt={member.name} loading="lazy" />
                  </picture>
                ) : (
                  <span>{member.name.split(' ').map(n => n[0]).join('')}</span>
                )}
              </div>
              <h3>{member.name}</h3>
              <span class="team-role">{member.role}</span>
              <p>{member.description}</p>
              {(member.linkedin || member.github) && (
                <div class="team-links">
                  {member.linkedin && (
                    <a href={member.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
                      <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                      </svg>
                    </a>
                  )}
                  {member.github && (
                    <a href={member.github} target="_blank" rel="noopener noreferrer" aria-label="GitHub">
                      <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                    </a>
                  )}
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>

    <CTA />
  </main>
  <Footer />
</Layout>

<style>
  /* Page Hero */
  .page-hero {
    padding-top: 10rem;
    padding-bottom: 4rem;
    text-align: center;
  }

  .page-label {
    display: inline-block;
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-gray-400);
    margin-bottom: 1rem;
  }

  .page-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 500;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin-bottom: 1.5rem;
  }

  .page-title .highlight {
    color: var(--color-gray-400);
  }

  .page-subtitle {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-gray-500);
    max-width: 600px;
    margin-inline: auto;
  }

  /* Story Section */
  .story {
    background: var(--color-gray-50);
  }

  .story-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .story-content h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }

  .story-content p {
    font-size: 1.0625rem;
    line-height: 1.8;
    color: var(--color-gray-500);
    margin-bottom: 1.5rem;
  }

  .story-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .stat-card {
    background: var(--color-white);
    padding: 1.5rem;
    border-radius: 12px;
    text-align: center;
  }

  .stat-value {
    display: block;
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-black);
    letter-spacing: -0.02em;
  }

  .stat-label {
    font-size: 0.8125rem;
    color: var(--color-gray-400);
  }

  /* Values Section */
  .section-header {
    margin-bottom: 3rem;
  }

  .section-label {
    display: inline-block;
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-gray-400);
    margin-bottom: 0.5rem;
  }

  .section-header h2 {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 500;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  .value-card {
    padding: 2rem;
    background: var(--color-gray-50);
    border-radius: 16px;
    transition: all 0.3s ease;
  }

  .value-card:hover {
    background: var(--color-white);
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    transform: translateY(-4px);
  }

  .value-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-white);
    border-radius: 12px;
    margin-bottom: 1rem;
    color: var(--color-black);
  }

  .value-card:hover .value-icon {
    background: var(--color-gray-50);
  }

  .value-card h3 {
    font-size: 1.125rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .value-card p {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--color-gray-500);
    margin: 0;
  }

  /* Team Section */
  .team {
    background: var(--color-gray-50);
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 3rem;
    max-width: 800px;
    margin-inline: auto;
  }

  .team-card {
    background: var(--color-white);
    padding: 2.5rem;
    border-radius: 16px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .team-card:hover {
    box-shadow: 0 20px 40px rgba(0,0,0,0.06);
    transform: translateY(-4px);
  }

  .team-avatar {
    width: 120px;
    height: 120px;
    background: var(--color-gray-100);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-gray-500);
    overflow: hidden;
  }

  .team-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .team-avatar picture {
    width: 100%;
    height: 100%;
  }

  .team-card h3 {
    font-size: 1.25rem;
    font-weight: 500;
    margin-bottom: 0.25rem;
  }

  .team-role {
    font-size: 0.875rem;
    color: var(--color-gray-400);
    display: block;
    margin-bottom: 1rem;
  }

  .team-card p {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--color-gray-500);
    margin-bottom: 1.5rem;
  }

  .team-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .team-links a {
    color: var(--color-gray-400);
    transition: color 0.2s ease;
  }

  .team-links a:hover {
    color: var(--color-black);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .story-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .values-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .team-grid {
      grid-template-columns: 1fr;
      max-width: 400px;
      margin-inline: auto;
    }
  }

  @media (max-width: 640px) {
    .values-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
