---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import Industries from '../components/Industries.astro';
import CaseStudy from '../components/CaseStudy.astro';
import Products from '../components/Products.astro';
import About from '../components/About.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
import { createWebSiteSchema, createLocalBusinessSchema } from '../lib/schemas';

// Homepage structured data: WebSite + LocalBusiness
const websiteSchema = createWebSiteSchema({
  description:
    'We help plastic surgery clinics and local businesses attract more customers, automate operations, and scale with AI-powered solutions.',
});

const localBusinessSchema = createLocalBusinessSchema({
  type: 'ProfessionalService',
  description:
    'AI-first software company helping plastic surgery clinics and local businesses automate operations, attract customers, and scale with intelligent solutions.',
  priceRange: '$$$$',
});

const structuredData = [websiteSchema, localBusinessSchema];
---

<Layout
  title="AI-Powered Growth for Clinics & Businesses"
  description="We help plastic surgery clinics and local businesses attract more customers, automate operations, and scaleâ€”without the complexity. See how we increased consultations by 67%."
  structuredData={structuredData}
>
  <Header />
  <main>
    <Hero />
    <Services />
    <Industries />
    <CaseStudy />
    <Products />
    <About />
    <CTA />
  </main>
  <Footer />
</Layout>
