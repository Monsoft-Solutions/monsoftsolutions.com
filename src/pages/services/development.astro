const capabilities = [
  {
    category: 'Frontend',
    items: ['React', 'Next.js', 'Vue', 'TypeScript', 'Tailwind CSS'],
  },
  {
    category: 'Backend',
    items: ['Node.js', 'Python', 'Go', 'GraphQL', 'REST APIs'],
  },
  {
    category: 'Mobile',
    items: ['React Native', 'Flutter', 'iOS (Swift)', 'Android (Kotlin)'],
  },
  {
