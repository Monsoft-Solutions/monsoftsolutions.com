          {useCases.map((useCase, index) => (
            <div class={`use-case-card reveal reveal-delay-${(index % 3) + 1}`}>
              <span class="use-case-icon">{useCase.icon}</span>
              <h3>{useCase.business}</h3>
              <p class="use-case-description">{useCase.description}</p>
              <ul class="use-case-solutions">
                {useCase.solutions.map(solution => (
                  <li>{solution}</li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="process section-padding">
      <div class="container-wide">
        <div class="section-header reveal">
          <span class="section-label">How It Works</span>
          <h2>Simple, transparent, stress-free</h2>
