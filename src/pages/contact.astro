---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Webhook URL from environment variable (PUBLIC_ prefix makes it client-accessible)
const webhookUrl = import.meta.env.PUBLIC_N8N_WEBHOOK_URL;

const contactMethods = [
  {
    title: 'Email',
    value: 'hello@monsoftsolutions.com',
    link: 'mailto:hello@monsoftsolutions.com',
    icon: 'email',
  },
  {
    title: 'LinkedIn',
    value: 'Monsoft Solutions',
    link: 'https://linkedin.com/company/monsoft-solutions',
    icon: 'linkedin',
  },
  {
    title: 'GitHub',
    value: 'Monsoft-Solutions',
    link: 'https://github.com/Monsoft-Solutions',
    icon: 'github',
  },
];

const projectTypes = [
  'AI Solution',
  'Business Automation',
  'Custom Development',
  'Product Inquiry (Adfluens)',
  'Product Inquiry (Praxis Notes)',
  'Early Access (Loquent)',
  'Partnership',
  'Other',
];
---

<Layout
  title="Contact"
  description="Get in touch with Monsoft Solutions. Let's discuss how AI-powered software can transform your business."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="page-hero">
      <div class="container-narrow">
        <span class="page-label reveal">Contact</span>
        <h1 class="page-title reveal reveal-delay-1">
          Let's build something
          <span class="highlight">together</span>
        </h1>
        <p class="page-subtitle reveal reveal-delay-2">
          Have a project in mind? Want early access to Loquent? Or just want to talk about what AI
          can do for your business? We're listening.
        </p>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="contact section-padding">
      <div class="container-wide">
        <div class="contact-grid">
          <!-- Contact Form -->
          <div class="contact-form-container reveal">
            <form class="contact-form" id="contact-form">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" required placeholder="Your name" />
              </div>

              <div class="form-group">
                <label for="email">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  placeholder="you@company.com"
                />
              </div>

              <div class="form-group">
                <label for="company">Company</label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  placeholder="Your company (optional)"
                />
              </div>

              <div class="form-group">
                <label for="project-type">What can we help with?</label>
                <select id="project-type" name="project-type" required>
                  <option value="" disabled selected>Select a project type</option>
                  {projectTypes.map((type) => <option value={type}>{type}</option>)}
                </select>
              </div>

              <div class="form-group">
                <label for="message">Tell us more</label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  placeholder="Describe your project or question..."></textarea>
              </div>

              <div class="form-group">
                <label for="budget">Budget Range</label>
                <select id="budget" name="budget">
                  <option value="" disabled selected>Select a budget range (optional)</option>
                  <option value="<10k">Less than $10,000</option>
                  <option value="10k-25k">$10,000 - $25,000</option>
                  <option value="25k-50k">$25,000 - $50,000</option>
                  <option value="50k-100k">$50,000 - $100,000</option>
                  <option value="100k+">$100,000+</option>
                  <option value="ongoing">Ongoing retainer</option>
                </select>
              </div>

              <button type="submit" class="btn btn-primary btn-full">
                <span>Send Message</span>
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
              </button>

              <p class="form-note">We typically respond within 24 hours.</p>
            </form>
          </div>

          <!-- Contact Info -->
          <div class="contact-info reveal reveal-delay-1">
            <div class="info-card">
              <h3>Other ways to reach us</h3>
              <div class="contact-methods">
                {
                  contactMethods.map((method) => (
                    <a
                      href={method.link}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="contact-method"
                    >
                      <div class="method-icon">
                        {method.icon === 'email' && (
                          <svg
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                          >
                            <rect x="2" y="4" width="20" height="16" rx="2" />
                            <path d="M22 6l-10 7L2 6" />
                          </svg>
                        )}
                        {method.icon === 'linkedin' && (
                          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                          </svg>
                        )}
                        {method.icon === 'github' && (
                          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                          </svg>
                        )}
                      </div>
                      <div class="method-info">
                        <span class="method-title">{method.title}</span>
                        <span class="method-value">{method.value}</span>
                      </div>
                      <svg
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        class="method-arrow"
                      >
                        <path d="M7 17L17 7M17 7H7M17 7V17" />
                      </svg>
                    </a>
                  ))
                }
              </div>
            </div>

            <div class="info-card">
              <h3>Location</h3>
              <p>Miami, Florida<br />United States</p>
              <p class="location-note">We work with clients globally. All meetings are virtual.</p>
            </div>

            <div class="info-card highlight">
              <h3>Looking for a product?</h3>
              <p>If you're interested in one of our products, you can sign up directly:</p>
              <div class="product-links">
                <a href="https://adfluens.io" target="_blank" rel="noopener noreferrer">
                  Adfluens — Social Media AI
                  <svg
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M7 17L17 7M17 7H7M17 7V17"></path>
                  </svg>
                </a>
                <a href="https://praxisnotes.com" target="_blank" rel="noopener noreferrer">
                  Praxis Notes — ABA Session Notes
                  <svg
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M7 17L17 7M17 7H7M17 7V17"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  /* Page Hero */
  .page-hero {
    padding-top: 10rem;
    padding-bottom: 4rem;
    text-align: center;
  }

  .page-label {
    display: inline-block;
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-gray-400);
    margin-bottom: 1rem;
  }

  .page-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 500;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin-bottom: 1.5rem;
  }

  .page-title .highlight {
    color: var(--color-gray-400);
  }

  .page-subtitle {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-gray-500);
    max-width: 600px;
    margin-inline: auto;
  }

  /* Contact Section */
  .contact {
    background: var(--color-gray-50);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  /* Form */
  .contact-form-container {
    background: var(--color-white);
    padding: 3rem;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.04);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-gray-700);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.875rem 1rem;
    font-size: 1rem;
    border: 1px solid var(--color-gray-200);
    border-radius: 8px;
    background: var(--color-white);
    color: var(--color-black);
    transition: all 0.2s ease;
    font-family: inherit;
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: var(--color-gray-400);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-black);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .btn-full {
    width: 100%;
    justify-content: center;
    margin-top: 0.5rem;
  }

  .form-note {
    text-align: center;
    font-size: 0.8125rem;
    color: var(--color-gray-400);
    margin: 0;
  }

  /* Contact Info */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .info-card {
    background: var(--color-white);
    padding: 2rem;
    border-radius: 16px;
  }

  .info-card.highlight {
    background: var(--color-gray-100);
  }

  .info-card h3 {
    font-size: 1rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .info-card p {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--color-gray-500);
    margin: 0;
  }

  .location-note {
    margin-top: 0.75rem !important;
    font-size: 0.8125rem !important;
    color: var(--color-gray-400) !important;
  }

  /* Contact Methods */
  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: var(--color-gray-50);
    border-radius: 12px;
    transition: all 0.2s ease;
  }

  .contact-method:hover {
    background: var(--color-gray-100);
  }

  .method-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-white);
    border-radius: 10px;
    color: var(--color-gray-600);
  }

  .method-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .method-title {
    font-size: 0.75rem;
    color: var(--color-gray-400);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .method-value {
    font-size: 0.9375rem;
    color: var(--color-black);
    font-weight: 500;
  }

  .method-arrow {
    color: var(--color-gray-300);
    transition: all 0.2s ease;
  }

  .contact-method:hover .method-arrow {
    color: var(--color-black);
    transform: translate(2px, -2px);
  }

  /* Product Links */
  .product-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .product-links a {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1rem;
    background: var(--color-white);
    border-radius: 8px;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-black);
    transition: all 0.2s ease;
  }

  .product-links a:hover {
    background: var(--color-gray-50);
  }

  .product-links a svg {
    color: var(--color-gray-400);
    transition: all 0.2s ease;
  }

  .product-links a:hover svg {
    color: var(--color-black);
    transform: translate(2px, -2px);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .contact-info {
      order: -1;
    }
  }

  @media (max-width: 640px) {
    .contact-form-container {
      padding: 2rem;
    }
  }
</style>

<script is:inline define:vars={{ webhookUrl }}>
  // Contact form submission handler
  const form = document.getElementById('contact-form');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const button = form.querySelector('button[type="submit"]');
    const originalText = button?.innerHTML;

    if (button) {
      button.innerHTML = '<span>Sending...</span>';
      button.disabled = true;
    }

    try {
      // Collect form data
      const formData = new FormData(form);
      const data = {
        name: formData.get('name'),
        email: formData.get('email'),
        company: formData.get('company') || undefined,
        projectType: formData.get('project-type'),
        message: formData.get('message'),
        budget: formData.get('budget') || undefined,
        submittedAt: new Date().toISOString(),
        source: 'monsoftsolutions.com',
      };

      // Submit directly to n8n webhook
      const response = await fetch(webhookUrl, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        if (button) {
          button.innerHTML = '<span>Message Sent! ✓</span>';
          form.reset();

          setTimeout(() => {
            button.innerHTML = originalText || '';
            button.disabled = false;
          }, 3000);
        }
      } else {
        throw new Error('Failed to send message');
      }
    } catch (error) {
      console.error('Form submission error:', error);
      if (button) {
        button.innerHTML = '<span>Error - Try Again</span>';
        button.disabled = false;

        setTimeout(() => {
          button.innerHTML = originalText || '';
        }, 3000);
      }
    }
  });
</script>
