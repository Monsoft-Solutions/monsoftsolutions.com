---
interface Stat {
  value: string;
  label: string;
}

interface Props {
  stats: Stat[];
}

const { stats } = Astro.props;
---

<section class="stats-bar">
  <div class="container-wide">
    <div class="stats-grid">
      {
        stats.map((stat, index) => (
          <div class={`stat reveal reveal-delay-${index + 1}`}>
            <span class="stat-value" data-value={stat.value}>
              {stat.value}
            </span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .stats-bar {
    background: var(--color-black);
    padding: 3rem 0;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    text-align: center;
  }

  .stat {
    padding: 1rem;
  }

  .stat-value {
    display: block;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    color: var(--color-white);
    letter-spacing: -0.02em;
  }

  .stat-label {
    display: block;
    font-size: 0.875rem;
    color: var(--color-gray-500);
    margin-top: 0.5rem;
  }

  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .stats-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .stat {
      padding: 0.75rem;
    }
  }
</style>

<script>
  // Animated counter for stats
  function animateValue(
    element: HTMLElement,
    start: number,
    end: number,
    duration: number,
    suffix: string,
    prefix: string
  ) {
    const range = end - start;
    const startTime = performance.now();

    function update(currentTime: number) {
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);

      // Easing function (ease-out)
      const easeOut = 1 - Math.pow(1 - progress, 3);
      const current = Math.floor(start + range * easeOut);

      element.textContent = prefix + current + suffix;

      if (progress < 1) {
        requestAnimationFrame(update);
      } else {
        element.textContent = prefix + end + suffix;
      }
    }

    requestAnimationFrame(update);
  }

  function parseStatValue(value: string): { number: number; suffix: string; prefix: string } {
    // Handle formats like "10x", "75%", "24/7", "3-6mo", "<2s", "100+", "$15K"
    const match = value.match(/^([<>$]?)(\d+(?:\.\d+)?)(.*?)$/);
    if (match) {
      return {
        prefix: match[1] || '',
        number: parseFloat(match[2]),
        suffix: match[3] || '',
      };
    }
    return { prefix: '', number: 0, suffix: value };
  }

  // Intersection Observer for stats animation
  const statsObserver = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const statValues = entry.target.querySelectorAll('.stat-value');
          statValues.forEach((el) => {
            const element = el as HTMLElement;
            const originalValue = element.dataset.value || element.textContent || '';
            const parsed = parseStatValue(originalValue);

            if (parsed.number > 0) {
              element.textContent = parsed.prefix + '0' + parsed.suffix;
              setTimeout(() => {
                animateValue(element, 0, parsed.number, 1500, parsed.suffix, parsed.prefix);
              }, 100);
            }
          });
          statsObserver.unobserve(entry.target);
        }
      });
    },
    { threshold: 0.3 }
  );

  // Observe stats bar
  document.querySelectorAll('.stats-bar').forEach((bar) => {
    statsObserver.observe(bar);
  });
</script>
