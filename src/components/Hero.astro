---
// Hero component for homepage - Enhanced with GSAP
---

<section class="hero">
  <div class="container-wide">
    <div class="hero-content">
      <!-- Eyebrow -->
      <div class="eyebrow" data-animate="fade-up" data-delay="0">
        <span class="eyebrow-dot"></span>
        AI-First Software Company
      </div>

      <!-- Main Headline -->
      <h1 class="hero-title">
        <span class="title-line" data-animate="fade-up" data-delay="0.1">We build software that</span>
        <span class="title-line highlight" data-animate="fade-up" data-delay="0.2">thinks</span>
      </h1>

      <!-- Subtitle -->
      <p class="hero-subtitle" data-animate="fade-up" data-delay="0.3">
        Intelligent solutions that transform how businesses operate. 
        From AI-powered platforms to custom enterprise systemsâ€”we turn 
        complex problems into elegant software.
      </p>

      <!-- CTAs -->
      <div class="hero-ctas" data-animate="fade-up" data-delay="0.4">
        <a href="/contact" class="btn btn-primary">
          <span>Start a Project</span>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="/products" class="btn btn-secondary">
          View Our Products
        </a>
      </div>

      <!-- Trust Indicators -->
      <div class="trust-indicators" data-animate="fade-up" data-delay="0.5">
        <div class="trust-item">
          <span class="trust-number" data-count="2500">0</span>
          <span class="trust-label">Users on Adfluens</span>
        </div>
        <div class="trust-divider"></div>
        <div class="trust-item">
          <span class="trust-number" data-count="50">0</span>
          <span class="trust-suffix">M+</span>
          <span class="trust-label">Posts Published</span>
        </div>
        <div class="trust-divider"></div>
        <div class="trust-item">
          <span class="trust-number" data-count="15">0</span>
          <span class="trust-suffix">+</span>
          <span class="trust-label">Enterprise Clients</span>
        </div>
      </div>
    </div>

    <!-- Visual Element -->
    <div class="hero-visual" data-animate="scale-in" data-delay="0.3">
      <div class="visual-container">
        <div class="visual-grid">
          {[...Array(9)].map((_, i) => (
            <div class={`grid-item ${i === 3 ? 'accent' : ''} ${i === 8 ? 'accent-secondary' : ''}`} data-grid-item={i}></div>
          ))}
        </div>
        <div class="visual-glow"></div>
        
        <!-- Floating elements for depth -->
        <div class="floating-element fe-1"></div>
        <div class="floating-element fe-2"></div>
        <div class="floating-element fe-3"></div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="scroll-indicator" data-animate="fade-in" data-delay="1">
    <span>Scroll to explore</span>
    <div class="scroll-line">
      <div class="scroll-dot"></div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-top: 8rem;
    padding-bottom: 4rem;
    position: relative;
    overflow: hidden;
  }

  .hero .container-wide {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    flex: 1;
  }

  .hero-content {
    max-width: 600px;
  }

  /* Eyebrow */
  .eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-gray-500);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1.5rem;
    opacity: 0;
  }

  .eyebrow-dot {
    width: 8px;
    height: 8px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(0.9); }
  }

  /* Title */
  .hero-title {
    font-size: clamp(3rem, 5.5vw, 4.5rem);
    font-weight: 500;
    line-height: 1.05;
    letter-spacing: -0.03em;
    margin-bottom: 1.5rem;
    color: var(--color-black);
  }

  .title-line {
    display: block;
    opacity: 0;
  }

  .hero-title .highlight {
    color: var(--color-gray-400);
    font-style: italic;
    position: relative;
    display: inline-block;
  }

  /* Subtitle */
  .hero-subtitle {
    font-size: clamp(1.0625rem, 1.3vw, 1.25rem);
    line-height: 1.7;
    color: var(--color-gray-500);
    margin-bottom: 2.5rem;
    max-width: 520px;
    opacity: 0;
  }

  /* CTAs */
  .hero-ctas {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 4rem;
    opacity: 0;
  }

  .hero-ctas .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .hero-ctas .btn-primary {
    position: relative;
    overflow: hidden;
  }

  .hero-ctas .btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s ease;
  }

  .hero-ctas .btn-primary:hover::before {
    left: 100%;
  }

  /* Trust Indicators */
  .trust-indicators {
    display: flex;
    align-items: center;
    gap: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-gray-100);
    opacity: 0;
  }

  .trust-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .trust-number {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-black);
    letter-spacing: -0.02em;
    display: inline;
  }

  .trust-suffix {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-black);
    letter-spacing: -0.02em;
  }

  .trust-label {
    font-size: 0.8125rem;
    color: var(--color-gray-400);
  }

  .trust-divider {
    width: 1px;
    height: 40px;
    background: var(--color-gray-200);
  }

  /* Visual Element */
  .hero-visual {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
  }

  .visual-container {
    position: relative;
    width: 100%;
    max-width: 450px;
    aspect-ratio: 1;
  }

  .visual-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    width: 100%;
    height: 100%;
  }

  .grid-item {
    background: var(--color-gray-100);
    border-radius: 16px;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    opacity: 0;
    transform: scale(0.8);
  }

  .grid-item.accent {
    background: var(--color-black);
  }

  .grid-item.accent-secondary {
    background: var(--color-gray-300);
  }

  .grid-item:hover {
    transform: scale(1.05) rotate(2deg);
  }

  .visual-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(37, 99, 235, 0.08) 0%, transparent 70%);
    pointer-events: none;
  }

  /* Floating elements */
  .floating-element {
    position: absolute;
    border-radius: 50%;
    background: var(--color-gray-200);
    opacity: 0.5;
    pointer-events: none;
  }

  .fe-1 {
    width: 60px;
    height: 60px;
    top: -20px;
    right: 20px;
    animation: float-1 6s ease-in-out infinite;
  }

  .fe-2 {
    width: 40px;
    height: 40px;
    bottom: 40px;
    left: -10px;
    animation: float-2 8s ease-in-out infinite;
  }

  .fe-3 {
    width: 24px;
    height: 24px;
    top: 40%;
    right: -30px;
    animation: float-3 7s ease-in-out infinite;
  }

  @keyframes float-1 {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(10deg); }
  }

  @keyframes float-2 {
    0%, 100% { transform: translateY(0) translateX(0); }
    50% { transform: translateY(-15px) translateX(10px); }
  }

  @keyframes float-3 {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-25px); }
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    opacity: 0;
  }

  .scroll-indicator span {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-gray-400);
  }

  .scroll-line {
    width: 1px;
    height: 40px;
    background: var(--color-gray-200);
    position: relative;
    overflow: hidden;
  }

  .scroll-dot {
    width: 3px;
    height: 8px;
    background: var(--color-black);
    border-radius: 2px;
    position: absolute;
    left: -1px;
    animation: scroll-down 2s ease-in-out infinite;
  }

  @keyframes scroll-down {
    0% { top: 0; opacity: 0; }
    20% { opacity: 1; }
    80% { opacity: 1; }
    100% { top: 100%; opacity: 0; }
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero .container-wide {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-content {
      max-width: 100%;
      order: 2;
    }

    .hero-subtitle {
      margin-inline: auto;
    }

    .hero-ctas {
      justify-content: center;
    }

    .trust-indicators {
      justify-content: center;
    }

    .hero-visual {
      order: 1;
      margin-bottom: 2rem;
    }

    .visual-container {
      max-width: 320px;
    }

    .scroll-indicator {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .hero {
      padding-top: 6rem;
    }

    .trust-indicators {
      flex-wrap: wrap;
      gap: 1.5rem;
    }

    .trust-divider {
      display: none;
    }
  }
</style>

<script>
  import { gsap } from 'gsap';

  // Wait for DOM to be ready
  document.addEventListener('DOMContentLoaded', () => {
    // Create timeline for hero animations
    const tl = gsap.timeline({ defaults: { ease: 'power3.out' } });

    // Animate elements with data-animate attribute
    const fadeUpElements = document.querySelectorAll('[data-animate="fade-up"]');
    fadeUpElements.forEach(el => {
      const delay = parseFloat(el.dataset.delay) || 0;
      tl.to(el, {
        opacity: 1,
        y: 0,
        duration: 0.8,
      }, delay);
      
      // Set initial state
      gsap.set(el, { opacity: 0, y: 30 });
    });

    // Scale in animation for visual
    const scaleInElements = document.querySelectorAll('[data-animate="scale-in"]');
    scaleInElements.forEach(el => {
      const delay = parseFloat(el.dataset.delay) || 0;
      gsap.set(el, { opacity: 0, scale: 0.9 });
      tl.to(el, {
        opacity: 1,
        scale: 1,
        duration: 1,
      }, delay);
    });

    // Fade in animation
    const fadeInElements = document.querySelectorAll('[data-animate="fade-in"]');
    fadeInElements.forEach(el => {
      const delay = parseFloat(el.dataset.delay) || 0;
      gsap.set(el, { opacity: 0 });
      tl.to(el, {
        opacity: 1,
        duration: 0.8,
      }, delay);
    });

    // Grid items stagger animation
    const gridItems = document.querySelectorAll('[data-grid-item]');
    gsap.to(gridItems, {
      opacity: 1,
      scale: 1,
      duration: 0.6,
      stagger: 0.1,
      delay: 0.5,
      ease: 'back.out(1.7)'
    });

    // Animate numbers counting up
    const countElements = document.querySelectorAll('[data-count]');
    countElements.forEach(el => {
      const target = parseInt(el.dataset.count);
      gsap.to(el, {
        innerHTML: target,
        duration: 2,
        delay: 0.8,
        snap: { innerHTML: 1 },
        ease: 'power2.out',
        onUpdate: function() {
          el.innerHTML = Math.round(parseFloat(el.innerHTML)).toLocaleString() + '+';
        }
      });
    });

    // Parallax effect on mouse move
    const visual = document.querySelector('.visual-container');
    if (visual && window.innerWidth > 1024) {
      document.addEventListener('mousemove', (e) => {
        const x = (e.clientX - window.innerWidth / 2) / 50;
        const y = (e.clientY - window.innerHeight / 2) / 50;
        
        gsap.to(visual, {
          x: x,
          y: y,
          duration: 1,
          ease: 'power2.out'
        });
      });
    }
  });
</script>
