---
// Hero component for homepage - Professional, warm, and approachable
---

<section class="hero">
  <div class="container-wide">
    <div class="hero-content">
      <!-- Eyebrow -->
      <div class="eyebrow" data-animate="fade-up" data-delay="0">
        <span class="eyebrow-dot"></span>
        AI-Powered Growth for Clinics & Businesses
      </div>

      <!-- Main Headline -->
      <h1 class="hero-title">
        <span class="title-line" data-animate="fade-up" data-delay="0.1">More patients.</span>
        <span class="title-line" data-animate="fade-up" data-delay="0.15">More customers.</span>
        <span class="title-line highlight" data-animate="fade-up" data-delay="0.2">Less busywork.</span>
      </h1>

      <!-- Subtitle -->
      <p class="hero-subtitle" data-animate="fade-up" data-delay="0.3">
        We help plastic surgery clinics and local businesses automate operations, 
        attract more customers, and scaleâ€”without the complexity.
      </p>

      <!-- CTAs -->
      <div class="hero-ctas" data-animate="fade-up" data-delay="0.4">
        <a href="/services" class="btn btn-primary">
          <span>See How It Works</span>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="/services/aesthetics" class="btn btn-secondary">
          View Case Study
        </a>
      </div>

      <!-- Stats/Results -->
      <div class="trust-indicators" data-animate="fade-up" data-delay="0.5">
        <div class="trust-item">
          <span class="trust-number" data-count="340">0</span>
          <span class="trust-suffix">%</span>
          <span class="trust-label">Traffic Increase</span>
        </div>
        <div class="trust-divider"></div>
        <div class="trust-item">
          <span class="trust-number" data-count="67">0</span>
          <span class="trust-suffix">%</span>
          <span class="trust-label">More Consultations</span>
        </div>
        <div class="trust-divider"></div>
        <div class="trust-item">
          <span class="trust-number" data-count="90">0</span>
          <span class="trust-suffix">%</span>
          <span class="trust-label">Time Saved</span>
        </div>
      </div>
    </div>

    <!-- Hero Image -->
    <div class="hero-visual" data-animate="scale-in" data-delay="0.3">
      <div class="visual-container">
        <div class="image-wrapper">
          <picture>
            <source srcset="/images/home/hero-main.webp" type="image/webp" />
            <img 
              src="/images/home/hero-main.png" 
              alt="Professional team collaborating on business growth strategies"
              loading="eager"
              decoding="async"
            />
          </picture>
          <div class="image-overlay"></div>
        </div>
        
        <!-- Subtle floating elements for depth -->
        <div class="floating-element fe-1"></div>
        <div class="floating-element fe-2"></div>
        <div class="floating-element fe-3"></div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="scroll-indicator" data-animate="fade-in" data-delay="1">
    <span>Scroll to explore</span>
    <div class="scroll-line">
      <div class="scroll-dot"></div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-top: 8rem;
    padding-bottom: 4rem;
    position: relative;
    overflow: hidden;
    background: linear-gradient(180deg, var(--color-white) 0%, #fafbfc 100%);
  }

  .hero .container-wide {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    flex: 1;
  }

  .hero-content {
    max-width: 600px;
  }

  /* Eyebrow */
  .eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-gray-500);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1.5rem;
    opacity: 0;
  }

  .eyebrow-dot {
    width: 8px;
    height: 8px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(0.9); }
  }

  /* Title */
  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 600;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin-bottom: 1.5rem;
    color: var(--color-black);
  }

  .title-line {
    display: block;
    opacity: 0;
  }

  .hero-title .highlight {
    color: var(--color-primary, #2563eb);
    position: relative;
    display: inline-block;
  }

  /* Subtitle */
  .hero-subtitle {
    font-size: clamp(1.0625rem, 1.3vw, 1.25rem);
    line-height: 1.7;
    color: var(--color-gray-600);
    margin-bottom: 2.5rem;
    max-width: 520px;
    opacity: 0;
  }

  /* CTAs */
  .hero-ctas {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 3rem;
    opacity: 0;
  }

  .hero-ctas .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .hero-ctas .btn-primary {
    position: relative;
    overflow: hidden;
    background: var(--color-primary, #2563eb);
    color: white;
    padding: 0.875rem 1.75rem;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .hero-ctas .btn-primary:hover {
    background: var(--color-primary-dark, #1d4ed8);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(37, 99, 235, 0.25);
  }

  .hero-ctas .btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s ease;
  }

  .hero-ctas .btn-primary:hover::before {
    left: 100%;
  }

  .hero-ctas .btn-secondary {
    padding: 0.875rem 1.75rem;
    border: 1px solid var(--color-gray-300);
    border-radius: 8px;
    color: var(--color-gray-700);
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .hero-ctas .btn-secondary:hover {
    border-color: var(--color-gray-400);
    background: var(--color-gray-50);
  }

  /* Trust Indicators / Stats */
  .trust-indicators {
    display: flex;
    align-items: center;
    gap: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-gray-200);
    opacity: 0;
  }

  .trust-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .trust-number {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-black);
    letter-spacing: -0.02em;
    display: inline;
  }

  .trust-suffix {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-black);
    letter-spacing: -0.02em;
  }

  .trust-label {
    font-size: 0.8125rem;
    color: var(--color-gray-500);
    font-weight: 500;
  }

  .trust-divider {
    width: 1px;
    height: 40px;
    background: var(--color-gray-200);
  }

  /* Visual Element - Hero Image */
  .hero-visual {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
  }

  .visual-container {
    position: relative;
    width: 100%;
    max-width: 550px;
  }

  .image-wrapper {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 
      0 25px 50px -12px rgba(0, 0, 0, 0.15),
      0 12px 24px -8px rgba(0, 0, 0, 0.1);
  }

  .image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(37, 99, 235, 0.05) 0%,
      transparent 50%,
      rgba(0, 0, 0, 0.03) 100%
    );
    pointer-events: none;
  }

  /* Subtle floating elements */
  .floating-element {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
  }

  .fe-1 {
    width: 80px;
    height: 80px;
    top: -30px;
    right: -20px;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.08) 0%, rgba(37, 99, 235, 0.03) 100%);
    animation: float-1 8s ease-in-out infinite;
  }

  .fe-2 {
    width: 50px;
    height: 50px;
    bottom: 30px;
    left: -20px;
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1) 0%, rgba(34, 197, 94, 0.04) 100%);
    animation: float-2 10s ease-in-out infinite;
  }

  .fe-3 {
    width: 30px;
    height: 30px;
    top: 30%;
    right: -40px;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.06) 0%, transparent 100%);
    animation: float-3 9s ease-in-out infinite;
  }

  @keyframes float-1 {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-15px) rotate(5deg); }
  }

  @keyframes float-2 {
    0%, 100% { transform: translateY(0) translateX(0); }
    50% { transform: translateY(-10px) translateX(8px); }
  }

  @keyframes float-3 {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-18px); }
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    opacity: 0;
  }

  .scroll-indicator span {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-gray-400);
  }

  .scroll-line {
    width: 1px;
    height: 40px;
    background: var(--color-gray-200);
    position: relative;
    overflow: hidden;
  }

  .scroll-dot {
    width: 3px;
    height: 8px;
    background: var(--color-primary, #2563eb);
    border-radius: 2px;
    position: absolute;
    left: -1px;
    animation: scroll-down 2s ease-in-out infinite;
  }

  @keyframes scroll-down {
    0% { top: 0; opacity: 0; }
    20% { opacity: 1; }
    80% { opacity: 1; }
    100% { top: 100%; opacity: 0; }
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero .container-wide {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-content {
      max-width: 100%;
      order: 2;
    }

    .hero-subtitle {
      margin-inline: auto;
    }

    .hero-ctas {
      justify-content: center;
    }

    .trust-indicators {
      justify-content: center;
    }

    .hero-visual {
      order: 1;
      margin-bottom: 2rem;
    }

    .visual-container {
      max-width: 400px;
    }

    .scroll-indicator {
      display: none;
    }

    .floating-element {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .hero {
      padding-top: 6rem;
    }

    .hero-title {
      font-size: clamp(2rem, 8vw, 2.5rem);
    }

    .trust-indicators {
      flex-wrap: wrap;
      gap: 1.5rem;
    }

    .trust-divider {
      display: none;
    }

    .trust-item {
      flex: 1;
      min-width: 80px;
      align-items: center;
    }

    .hero-ctas {
      flex-direction: column;
      align-items: stretch;
    }

    .hero-ctas .btn {
      justify-content: center;
    }
  }
</style>

<script>
  import { gsap } from 'gsap';

  // Wait for DOM to be ready
  document.addEventListener('DOMContentLoaded', () => {
    // Create timeline for hero animations
    const tl = gsap.timeline({ defaults: { ease: 'power3.out' } });

    // Animate elements with data-animate attribute
    const fadeUpElements = document.querySelectorAll('[data-animate="fade-up"]');
    fadeUpElements.forEach(el => {
      const delay = parseFloat(el.dataset.delay) || 0;
      tl.to(el, {
        opacity: 1,
        y: 0,
        duration: 0.8,
      }, delay);
      
      // Set initial state
      gsap.set(el, { opacity: 0, y: 30 });
    });

    // Scale in animation for visual
    const scaleInElements = document.querySelectorAll('[data-animate="scale-in"]');
    scaleInElements.forEach(el => {
      const delay = parseFloat(el.dataset.delay) || 0;
      gsap.set(el, { opacity: 0, scale: 0.95 });
      tl.to(el, {
        opacity: 1,
        scale: 1,
        duration: 1,
      }, delay);
    });

    // Fade in animation
    const fadeInElements = document.querySelectorAll('[data-animate="fade-in"]');
    fadeInElements.forEach(el => {
      const delay = parseFloat(el.dataset.delay) || 0;
      gsap.set(el, { opacity: 0 });
      tl.to(el, {
        opacity: 1,
        duration: 0.8,
      }, delay);
    });

    // Animate numbers counting up
    const countElements = document.querySelectorAll('[data-count]');
    countElements.forEach(el => {
      const target = parseInt(el.dataset.count);
      gsap.to(el, {
        innerHTML: target,
        duration: 2,
        delay: 0.8,
        snap: { innerHTML: 1 },
        ease: 'power2.out',
        onUpdate: function() {
          el.innerHTML = Math.round(parseFloat(el.innerHTML)).toLocaleString();
        }
      });
    });

    // Subtle parallax effect on mouse move for the image
    const visual = document.querySelector('.visual-container');
    if (visual && window.innerWidth > 1024) {
      document.addEventListener('mousemove', (e) => {
        const x = (e.clientX - window.innerWidth / 2) / 80;
        const y = (e.clientY - window.innerHeight / 2) / 80;
        
        gsap.to(visual, {
          x: x,
          y: y,
          duration: 1.2,
          ease: 'power2.out'
        });
      });
    }
  });
</script>
